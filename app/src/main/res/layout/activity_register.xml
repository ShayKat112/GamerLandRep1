<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/androidstudiofinalbackground"
    tools:context=".activity_register">

        <ImageButton
            android:id="@+id/imbtnback"
            android:layout_width="70dp"
            android:layout_height="72dp"
            android:background="@null"
            android:src="@drawable/backarrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvRegister1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="72dp"
            android:gravity="center"
            android:text="User regis"
            android:textColor="#000000"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvRegister2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="72dp"
            android:gravity="center"
            android:text="tration:"
            android:textColor="#2196F3"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edUsername"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="164dp"
            android:fontFamily="casual"
            android:hint="Username:"
            android:shadowColor="#FFFFFF"
            android:shadowRadius="5"
            android:textColorHint="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edPassword"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="Password:"
            android:inputType="textPassword"
            android:shadowColor="#FFFFFF"
            android:shadowRadius="5"
            android:textColorHint="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edUsername" />

        <EditText
            android:id="@+id/edPasswordVerification"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="Password verification:"
            android:inputType="textPassword"
            android:shadowColor="#FFFFFF"
            android:shadowRadius="5"
            android:textColorHint="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/edPassword" />


        <TextView
            android:id="@+id/tvBirthDateText"
            android:layout_width="105dp"
            android:layout_height="30dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="448dp"
            android:ems="10"
            android:fontFamily="casual"
            android:shadowColor="#FFFFFF"
            android:shadowRadius="5"
            android:text="Birth Date:"
            android:textColorHint="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvBirthDate"
            android:layout_width="105dp"
            android:layout_height="30dp"
            android:layout_marginStart="160dp"
            android:layout_marginTop="448dp"
            android:ems="10"
            android:fontFamily="casual"
            android:gravity="center"
            android:shadowColor="#FFFFFF"
            android:shadowRadius="5"
            android:text="1/1/2024"
            android:textColorHint="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnChooseDate"
            android:layout_width="97dp"
            android:layout_height="57dp"
            android:layout_marginStart="272dp"
            android:layout_marginTop="436dp"
            android:backgroundTint="#2196F3"
            android:onClick="openDatePicker"
            android:text="Choose Date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edEmail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="372dp"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="Email:"
            android:inputType="textEmailAddress"
            android:shadowColor="#FFFFFF"
            android:shadowRadius="5"
            android:textColorHint="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edLikedGames"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginTop="504dp"
            android:ems="10"
            android:fontFamily="casual"
            android:hint="Liked games:"
            android:inputType="text"
            android:shadowColor="#FFFFFF"
            android:shadowRadius="5"
            android:textColorHint="#000000"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="164dp"
            android:layout_marginTop="644dp"
            android:backgroundTint="#2196F3"
            android:text="Register"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvChooseImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="568dp"
            android:text="Choose Image: "
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imvAvatar"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="560dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/default_user" />

        <Button
            android:id="@+id/btnChooseAvatar"
            android:layout_width="102dp"
            android:layout_height="55dp"
            android:layout_marginStart="264dp"
            android:layout_marginTop="552dp"
            android:backgroundTint="#2196F3"
            android:text="Choose Avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>