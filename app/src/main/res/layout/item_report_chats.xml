<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/rounded_border"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    android:elevation="4dp">

    <TextView
        android:id="@+id/tvChatReported"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat Reported: Chat"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tvReportReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report Reason: Reason"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btnDeleteChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Chat"
        android:textColor="@android:color/white"
        android:backgroundTint="#2196F3"
        android:layout_marginTop="8dp" />

    <ImageButton
        android:id="@+id/btnDismissItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:contentDescription="Dismiss item"
        app:tint="@android:color/black" />

</LinearLayout>
